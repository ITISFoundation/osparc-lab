/demos/frontend-*/       @odeimaiz
/demos/docker-node/      @pcrespov


# any change in cmake magic
CMakeLists.txt   @sbenkler

# any change in travis
/.travis.yml     @sbenkler

# to control within-source vs. out-of-source builds
/.gitignore      @sbenkler

# to control this file
/CODEOWNER       @sbenkler

